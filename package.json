{
  "name": "@octohash/vite-config",
  "type": "module",
  "version": "0.3.0",
  "packageManager": "pnpm@10.19.0",
  "description": "Opinionated Vite config preset.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/vite-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/vite-config.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/vite-config/issues"
  },
  "keywords": [
    "vite",
    "vite-config"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "deps": "taze major -I",
    "catalog": "pncat",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "release": "bumpp",
    "prepare": "simple-git-hooks",
    "bootstrap": "pnpm install",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "vite": ">=7.0.0"
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:node",
    "@clack/prompts": "catalog:node",
    "@vitejs/plugin-vue": "catalog:vue",
    "@vitejs/plugin-vue-jsx": "catalog:vue",
    "find-up": "catalog:node",
    "pathe": "catalog:node",
    "rollup-plugin-visualizer": "catalog:common",
    "unplugin-auto-import": "catalog:vue",
    "unplugin-vue-components": "catalog:vue",
    "unplugin-vue-router": "catalog:vue",
    "vite-plugin-dts": "catalog:common",
    "vite-plugin-dynamic-base": "catalog:common"
  },
  "optionalDependencies": {
    "@intlify/unplugin-vue-i18n": "catalog:vue",
    "@originjs/vite-plugin-federation": "catalog:common",
    "vite-plugin-jspm": "catalog:common",
    "vite-plugin-vue-devtools": "catalog:vue"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@jspm/generator": "catalog:dev",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "dayjs": "catalog:utils",
    "deepmerge": "catalog:utils",
    "eslint": "catalog:lint",
    "lint-staged": "catalog:lint",
    "local-pkg": "catalog:node",
    "pkg-types": "catalog:node",
    "pncat": "catalog:cli",
    "simple-git-hooks": "catalog:lint",
    "taze": "catalog:cli",
    "tinyglobby": "catalog:node",
    "typescript": "catalog:tsc",
    "unbuild": "catalog:build",
    "vitest": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
